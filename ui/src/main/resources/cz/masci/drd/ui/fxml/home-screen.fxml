<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml">
    <children>
        <GridPane gridLinesVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="80" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="80" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="80" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="btnAdventures" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Dobrodružství"/>
                <Button fx:id="btnMonsters" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Příšery" GridPane.columnIndex="1"/>
                <Button fx:id="btnWeapons" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Zbraně" GridPane.rowIndex="1"/>
                <Button fx:id="btnBattle" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Bitva" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
