<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainPane" minHeight="400.0" minWidth="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <AnchorPane prefHeight="60.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <MFXButton fx:id="btnPrev" styleClass="outlined" onAction="#slide" text="Button" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0"/>
                <MFXButton fx:id="btnNext" styleClass="outlined" onAction="#slide" text="Button" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>
            </children>
        </AnchorPane>
    </bottom>
    <center>
        <AnchorPane fx:id="centerPane" minHeight="100.0" minWidth="400.0" BorderPane.alignment="CENTER"/>
    </center>
    <top>
        <Pane fx:id="topPane" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblTitle" styleClass="battleTitle" alignment="TOP_CENTER" prefWidth="600.0" maxWidth="Infinity" text="Label" wrapText="true">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <font>
                        <Font name="Arial" size="24.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
    </top>
</BorderPane>
